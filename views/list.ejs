<%- include("header") -%>
  <div >
    <form class="" action="/back" method="post">
        <button type="submit" name="button" class="backbtn">Home</button>
    </form>
  </div>
    <div class="box">
      <h1 id = "heading" ><%= listTitle %></h1>
    </div>
    <div class="box">

      <% itemsarray.forEach(function(itemlist){ %>
        <form  action="/delete" method="post">

        <div class="item">
          <input type="checkbox" name ="deletedItem" value=<%=itemlist._id %> onchange="this.form.submit()">
          <input type="hidden" name="listValue" value="<%= listTitle %>">
          <p ><%= itemlist.name %></p>
        </div>

      </form>
      <% }) %>


        <form class="item" action="/" method="post">
          <input type="text" name="newItem"  placeholder = "new item" autocomplete="off">
          <button type="submit" name="listValue" value = <%= listTitle  %> >+</button>
        </form>

    </div>


<%- include("footer") -%>
